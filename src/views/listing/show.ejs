<% layout('/listing/layouts') %>
    <h1><%= list.title%></h1>
    <ul>
        <li><%= list.description%></li>
        <li> &#x20b9; <%= list.price.toLocaleString("en-IN") %></li>
        <li><%= list.location%></li>
        <li><%= list.country%></li>
    </ul>
    <br>
    <a href="/listing/<%= list._id%>/edit">Update details</a>
    <br>
    <br>
    <form method="post" action="/listing/<%= list._id %>?_method=DELETE">
        <button>Delete Listing</button>
    </form>
